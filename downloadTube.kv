<FlatButton@ButtonBehavior+Label>:
    font_size: 16

<DownloadWindow>:
    id: main_win
    orientation: "vertical"
    spacing: 10
    space_x: self.size[0]/3
    canvas.before:
        Color:
            rgba: (1,1,1, 1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        size_hint_y: None
        height: 50
        canvas.before:
            Color:
                rgba: (.06, .45, .45, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: "Download A YouTube File"
            bold: True
            size_hint_x: 1
    BoxLayout:
        orientation: 'vertical'
        padding: main_win.space_x, 10
        #spacing: 20
        BoxLayout:
            orientation: "vertical"
            spacing: 10
            size_hint_y: None
            height: 100
            Label:
                id: info
                text: ''
                markup: True
                size_hint_y: None
                height: 20
            TextInput:
                id: link_field
                hint_text: "YouTube Link"
                multiline: False
                focus: True
                on_text_validate: path_field.focus = True
                size_hint_x: 1.5
            TextInput:
                id: path_field
                hint_text: "Download File Path"
                multiline: False
                password: False
                on_text_validate: root.download_file()
                size_hint_x: 1.5

        Label:
            id: sp
            size_hint_y: None
            height: 40
        Button:
            text: "Download File"
            size_hint_y: None
            height: 40
            background_color: (.06,.45,.45, 1)
            background_normal: ''
            on_release: root.download_file()
            size_hint_x: 1.5

        BoxLayout:
            orientation: "vertical"
            spacing: 10
            size_hint_y: None
            height: 300
